<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:screenOrientation="portrait"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Select Catogory"
        android:textColor="#000000"
        android:textAlignment="center"
        android:fontFamily="monospace"
        android:id="@+id/cat"
        android:textSize="20sp"
        android:gravity="center_horizontal" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp">

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:id="@+id/ent">


            <ImageView
                android:layout_width="65sp"
                android:layout_height="match_parent"
                android:id="@+id/ent_img"
                android:paddingLeft="20sp"
                android:layout_marginTop="20sp"
                android:src="@drawable/clapper"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:elevation="1dp"
                android:text="Entertainment"
                android:textColor="#000000"
                android:paddingLeft="20sp"
                android:paddingTop="15sp"
                android:textSize="20sp"
                android:background="#ffffff"
                android:layout_marginRight="25sp"
                android:layout_toRightOf="@id/ent_img"
                android:id="@+id/ent_text"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="15sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:id="@+id/sports"
                android:layout_below="@+id/ent">


                <ImageView
                    android:layout_width="65sp"
                    android:layout_height="match_parent"
                    android:id="@+id/sports_img"
                    android:paddingLeft="20sp"
                    android:layout_marginTop="20sp"
                    android:src="@drawable/medal"/>


                <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:elevation="1dp"
                android:text="Sports"
                android:textColor="#000000"
                android:layout_marginRight="25sp"
                android:paddingLeft="20sp"
                android:paddingTop="15sp"
                android:textSize="20sp"
                android:background="#ffffff"
                android:id="@+id/sports_text"
                android:layout_toRightOf="@id/sports_img"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="15sp"
                tools:ignore="RtlCompat" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:id="@+id/business"
                android:layout_below="@+id/sports">


                <ImageView
                    android:layout_width="65sp"
                    android:layout_height="match_parent"
                    android:id="@+id/business_img"
                    android:paddingLeft="20sp"
                    android:layout_marginTop="20sp"
                    android:src="@drawable/graph"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:elevation="1dp"
                android:text="Business"
                android:textColor="#000000"
                android:textSize="20sp"
                android:paddingLeft="20sp"
                android:paddingTop="15sp"
                android:background="#ffffff"
                android:layout_marginRight="25sp"
                android:id="@+id/business_text"
                android:layout_toRightOf="@id/business_img"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="15sp"
                tools:ignore="RtlCompat" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:id="@+id/technology"
                android:layout_below="@+id/business">


                <ImageView
                    android:layout_width="65sp"
                    android:layout_height="match_parent"
                    android:id="@+id/technology_img"
                    android:layout_marginTop="20sp"
                    android:paddingLeft="20sp"
                    android:src="@drawable/robot"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:elevation="1dp"
                    android:text="Technology"
                    android:layout_marginRight="25sp"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:paddingLeft="20sp"
                    android:paddingTop="15sp"
                    android:background="#ffffff"
                    android:id="@+id/technology_text"
                    android:layout_toRightOf="@id/technology_img"
                    android:layout_marginTop="20sp"
                    android:layout_marginLeft="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:id="@+id/health"
                android:layout_below="@+id/technology">


                <ImageView
                    android:layout_width="65sp"
                    android:layout_height="match_parent"
                    android:paddingLeft="20sp"
                    android:id="@+id/health_img"
                    android:layout_marginTop="20sp"
                    android:src="@drawable/medical"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:elevation="1dp"
                    android:layout_marginRight="25sp"
                    android:text="Health"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:background="#ffffff"
                    android:paddingLeft="20sp"
                    android:paddingTop="10sp"
                    android:id="@+id/health_text"
                    android:layout_toRightOf="@id/health_img"
                    android:layout_marginTop="20sp"
                    android:layout_marginLeft="15sp"
                    tools:ignore="RtlCompat" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:id="@+id/science"
                android:layout_below="@+id/health">


                <ImageView
                    android:layout_width="65sp"
                    android:layout_height="match_parent"
                    android:paddingLeft="20sp"
                    android:layout_marginTop="20sp"
                    android:id="@+id/science_img"
                    android:src="@drawable/atom"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:elevation="1dp"
                    android:text="Science"
                    android:textColor="#000000"
                    android:layout_marginRight="25sp"
                    android:textSize="20sp"
                    android:paddingLeft="20sp"
                    android:paddingTop="15sp"
                    android:background="#ffffff"
                    android:id="@+id/science_text"
                    android:layout_toRightOf="@id/science_img"
                    android:layout_marginTop="20sp"
                    android:layout_marginLeft="15sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:id="@+id/gen"
                android:layout_below="@+id/science">


                <ImageView
                    android:layout_width="65sp"
                    android:layout_height="match_parent"
                    android:id="@+id/gen_img"
                    android:paddingLeft="20sp"
                    android:layout_marginTop="20sp"
                    android:src="@drawable/newspaper"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:elevation="1dp"
                    android:text="General"
                    android:textColor="#000000"
                    android:paddingLeft="20sp"
                    android:paddingTop="15sp"
                    android:textSize="20sp"
                    android:background="#ffffff"
                    android:layout_marginRight="25sp"
                    android:layout_toRightOf="@id/gen_img"
                    android:id="@+id/gen_text"
                    android:layout_marginTop="20sp"
                    android:layout_marginLeft="15sp"/>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>